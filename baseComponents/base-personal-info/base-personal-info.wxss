.base-personal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.base-personal-info .left-wrap {
  display: flex;
  align-items: center;
}

.base-personal-info .left-wrap .avatar {
  border-radius: 50%;
  border: 2px solid #fff;
  display: block;
  width: 107rpx;
  height: 107rpx;
  margin-right: 20rpx;
}

.base-personal-info .left-wrap .content-wrap .name {
  font-size: 32rpx;
  letter-spacing: 1.4rpx;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.base-personal-info .left-wrap .content-wrap .integral {
  font-size: 20rpx;
  font-weight: bold;
  letter-spacing: 0rpx;
  color: #ffffff;
  padding: 5rpx 15rpx;
  background-image: linear-gradient(-90deg, #7f6c63 0%, #4b352b 100%);
  border-radius: 20rpx;
  border: solid 2rpx #86736b;
}

.base-personal-info .right-wrap .setting {
  width: 50rpx;
  height: 50rpx;
  display: block;
}
