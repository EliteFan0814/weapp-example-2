.container {
  background-color: #f5f5f5;
}

.container .van-tabs__line {
  background: #3d2e26;
}

.container .van-tab--active {
  color: #3d2e26;
}

.container .record-wrap .list-wrap {
  padding-bottom: 20rpx;
}

.container .record-wrap .list-wrap .list-item {
  box-shadow: 0px 0px 2px -1px rgba(0, 0, 0, 0.55);
  font-size: 28rpx;
  background-color: #fff;
  padding: 10rpx 20rpx;
  margin-top: 15rpx;
  border-radius: 10rpx;
}

.container .record-wrap .list-wrap .list-item > view {
  padding: 10rpx 0;
}

.container .record-wrap .list-wrap .list-item .title {
  justify-content: space-between;
}

.container .record-wrap .list-wrap .list-item .remark {
  font-weight: bolder;
  margin-bottom: 10rpx;
}

.container .record-wrap .list-wrap .list-item .time {
  font-size: 26rpx;
  text-align: right;
  color: grey;
}
