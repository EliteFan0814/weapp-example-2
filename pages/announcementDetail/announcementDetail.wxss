/* pages/announcementDetail/announcementDetail.wxss */
.container {
  background-color: #f5f5f5;
}

.container .rich-img {
  width: 100%;
}

.container .detail {
  background-color: #ffffff;
  border-radius: 18rpx;
  margin-top: 30rpx;
  padding: 20rpx;
}

.container .detail .detail-title {
  width: 100%;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 2rpx dashed #eee;
}

.container .detail .detail-main {
  min-height: 50vh;
  margin: 30rpx 0;
}

.container .detail .detail-date {
  text-align: right;
  padding-top: 30rpx;
  border-top: 2rpx dashed #eeeeee;
  color: #999999;
}
