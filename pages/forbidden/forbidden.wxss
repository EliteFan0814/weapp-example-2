.container {
  background-color: #f5f5f5;
}

.container .bg-wrap image {
  display: block;
  width: 100%;
  height: 100vh;
}

.container .login-wrap {
  position: fixed;
  width: 100%;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 48rpx;
  line-height: 58.2rpx;
  letter-spacing: 0rpx;
  color: #000;
}

.container .login-wrap .login-first .title {
  font-size: 26rpx;
  margin-bottom: 135rpx;
}

.container .login-wrap .login-first .title .warn {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.container .login-wrap .login-first .login {
  margin-bottom: 30rpx;
}

.container .login-wrap .login-first .btn-style {
  padding: 30rpx 200rpx;
  border-radius: 47.5rpx;
}
