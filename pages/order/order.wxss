/* pages/order/order.wxss */
.container {
  background-color: #f5f5f5;
}

.container .van-tabs__line {
  background: #3d2e26;
}

.container .van-tab--active {
  color: #3d2e26;
}

.container .scroll {
  height: calc(100vh - 246rpx);
}

.container .order-list {
  background-color: #f5f5f5;
}

.container .order-list .order-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 15rpx;
}

.container .order-list .order-item .title {
  margin-bottom: 20rpx;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999999;
}

.container .order-list .order-item .title .red {
  font-size: 28rpx;
  color: #fe2448;
  opacity: 0.97;
}

.container .order-list .order-item .title .success {
  color: #67c23a;
}

.container .order-list .order-item .info {
  padding-bottom: 20rpx;
}

.container .order-list .order-item .info .goods-list .goods-item {
  align-items: stretch;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #e9e9e9;
}

.container .order-list .order-item .info .goods-list .goods-item .good-img {
  width: 150rpx;
  height: 150rpx;
  background-color: #ffffff;
  margin-right: 10rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info {
  flex-grow: 1;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 26rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .name {
  width: 500rpx;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .spec {
  color: #888888;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .price {
  width: 100%;
  justify-content: space-between;
}

.container .order-list .order-item .info .goods-list .goods-item .right-info .price .number {
  color: #999999;
}

.container .order-list .order-item .info .more-btn {
  justify-content: center;
  border-top: 1px solid #eeeeee;
}

.container .order-list .order-item .info .more-btn image {
  width: 14rpx;
  padding: 0 10rpx;
}

.container .order-list .order-item .info .total {
  justify-content: space-between;
}

.container .order-list .order-item .info .total .left {
  font-size: 28rpx;
  color: #999999;
}

.container .order-list .order-item .info .total .right {
  font-size: 28rpx;
  color: #333;
  font-weight: bolder;
}

.container .order-list .order-item .info .total .right .word {
  font-weight: normal;
  color: #666;
}

.container .order-list .order-item .info .refund {
  font-size: 26rpx;
  color: #f88094;
  text-align: right;
  margin-top: 3rpx;
}

.container .order-list .order-item .operation {
  justify-content: flex-end;
}

.container .order-list .order-item .operation .btn-wrap .base-style {
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 24rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 26.99rpx;
  box-shadow: none;
}

.container .order-list .order-item .operation .btn-wrap .red {
  border: solid 1rpx #fe2448;
  color: #fe2448;
}

.container .order-list .order-item .operation .btn-wrap .success {
  border: solid 1rpx #67c23a;
  color: #67c23a;
}

.container .order-list .order-item .operation .btn-wrap .primary {
  border: solid 1rpx #409eff;
  color: #409eff;
}

.container .refundDialog {
  width: 70vw;
  padding: 50rpx;
  font-size: 26rpx;
}

.container .refundDialog .van-cell {
  border-bottom: 1px solid #f2f2f2;
}

.container .refundDialog .van-field__page {
  margin-top: 10rpx;
  border-bottom: 1px solid #f2f2f2;
}

.container .refundDialog .btn {
  width: 156rpx;
  height: 55rpx;
  border-radius: 26.99rpx;
  text-align: center;
  line-height: 55rpx;
  border: solid 1rpx #3d5afe;
  color: #3d5afe;
  font-size: 28rpx;
  margin: 30rpx auto 0;
}
